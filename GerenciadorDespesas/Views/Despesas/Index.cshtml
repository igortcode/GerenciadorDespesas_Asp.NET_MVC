@model X.PagedList.IPagedList<GerenciadorDespesas.Models.Despesa>
@using X.PagedList.Mvc.Core

@{
    ViewData["Title"] = "Despesas Cadastradas";
}




<div class="tabela">
    <p class="btnNovo">
        <a asp-action="Create" class="btn btn-primary btn-sm">Nova Despesa</a>
    </p>

    @{
        if (TempData["confirmacao"] != null)
        {
            <h6 class="alert alert-success">
                @TempData["confirmacao"]
            </h6>
        }
    }

    <div class="container">
        <div class="tabelaPrincipal">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>
                            Meses
                        </th>
                        <th>
                            Tipo da Despesa
                        </th>
                        <th>
                            Valor
                        </th>
                        <th>
                            Ação
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Mes.Nome)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TipoDespesa.Nome)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Valor)
                            </td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-info btn-sm">Atualizar</a> |
                                <a onclick="ExibirModal(@item.Id)" class="btn btn-outline-danger btn-sm">Excluir</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@Html.PagedListPager(Model, pagina => Url.Action("Index", "Despesas", new { pagina }), new X.PagedList.Web.Common.PagedListRenderOptions()
{
LiElementClasses = new string[] { "page-item" },
PageClasses = new string[] { "page-link" }
})


<div class="modal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Excluir</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Deseja prosseguir com a exclusão dessa despesa?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-primary btnExcluir">Sim</button>
                <button type="button" class="btn btn-outline-danger" data-bs-dismiss="modal">Não</button>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        function ExibirModal(id) {

            $(".modal").modal();

            $(".btnExcluir").on("click", function () {
                $.ajax({
                    url: "Despesas/Delete",
                    method: "POST",
                    data: { id: id },
                    success: function (data) {
                        $(".modal").modal('hide');
                        location.reload(true);
                    }
                });
            });

        }
    </script>
}